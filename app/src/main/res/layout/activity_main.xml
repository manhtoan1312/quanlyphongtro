<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/green_wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_weight="1.3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:gravity="center|left"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin Chào"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_vipAccount"
                        android:src="@drawable/ic_vip"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/txt_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_logout"
                    android:src="@drawable/ic_baseline_logout"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="8.7">
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:background="@drawable/main_shape"
                    android:weightSum="2"

                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:text="Tổng số nhà"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_totalHouse"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:text="Tổng số dịch vụ"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_totalServices"
                                android:textColor="@color/black"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:text="Tổng số người thuê"
                                android:textStyle="bold"
                                android:textColor="@color/black"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_totalTenants"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"

                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:text="Loại Tài khoản"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_accountType"
                                android:textColor="@color/black"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:background="@drawable/main_shape"

                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"

                    android:weightSum="3"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvNhaTro"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"

                                app:cardBackgroundColor="@color/white"

                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="12dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_house_manage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Quản lý nhà"
                                            android:textSize="14dp"

                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvDichVu"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/white"

                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="12dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_bill"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Quản lý dịch vụ"
                                            android:textSize="14dp"
                                            android:textColor="@color/black"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_quanLyTenants"
                                app:cardBackgroundColor="@color/white"

                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"


                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="12dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_tenants"
                                            android:padding="5dp"

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Quản lý người thuê"
                                            android:textSize="14dp"
                                            android:textColor="@color/black"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_note"
                                app:cardBackgroundColor="@color/white"

                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"


                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="12dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_notes"
                                            android:padding="5dp"

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Ghi chú"
                                            android:textSize="14dp"
                                            android:textColor="@color/black"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_joinRoom"

                                app:cardBackgroundColor="@color/white"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="12dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:src="@drawable/ic_join"
                                        android:padding="5dp"

                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"/>

                                    <TextView
                                        android:text="Tham Gia Phòng Trọ"
                                        android:textSize="14dp"
                                        android:textColor="@color/black"
                                        android:padding="5dp"
                                        android:gravity="center"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:text="(Dành cho người đi thuê)"
                                        android:textSize="12dp"
                                        android:textColor="#E91E63"
                                        android:gravity="center"
                                        android:layout_marginBottom="5dp"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_deposit"

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_weight="1"


                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="12dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:background="#975E0A"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_vip"
                                            android:padding="5dp"

                                            android:layout_width="70dp"
                                            android:layout_height="70dp"/>

                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>