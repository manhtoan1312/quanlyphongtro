<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_user"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_tenantName"
                    android:text="Tenant Name"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_houseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House Name"
                    android:gravity="center|left"
                    android:drawableLeft="@drawable/ic_baseline_home_work"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_roomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Name"
                    android:gravity="center|left"
                    android:drawableLeft="@drawable/ic_baseline_meeting_room"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Số điện thoại : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_tenantPhonenumber"
                        android:text="0123456"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_call"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:background="@drawable/shape_green_non_solid"
                        android:text="Gọi điện"
                        android:layout_marginRight="5dp"

                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_update"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="#FFC107"
                        android:textStyle="bold"
                        android:background="@drawable/shape_yellow_non_solid"
                        android:text="Sửa"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_delete"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:text="Xóa"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_red_non_solid"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/imgCall"-->
<!--                android:src="@drawable/icon_call"-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="match_parent"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>


    </LinearLayout>


</LinearLayout>